<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.igor.androidloginrestfulwebservice.CadastroLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL do site:"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/txtUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario/Email: "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha: "
            android:textSize="20sp" />
        <EditText
            android:id="@+id/txtSenha"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/botaoCadastrarSenhas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6347"
            android:layout_margin="5dp"
            android:text="Cadastrar"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/botaoVisualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6347"
            android:layout_margin="5dp"
            android:text="Visualizar Lista de Logins"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
